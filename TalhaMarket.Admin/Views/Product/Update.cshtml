@{
    ViewData["Title"] = "Update Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model ProductViewModel

<h1 class="display-4">Ürün Güncelle</h1>
<div class="card mb-4">
    <div class="card-body">
        <form asp-controller="Product" asp-action="Update" method="post">
            <div class="form-group">
                <label asp-for="ProductInsert.Name">Ürün Adı</label>
                <input asp-for="ProductInsert.Name" class="form-control" type="text" placeholder="Ürün Adı" />
                <span asp-validation-for="ProductInsert.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInsert.DisplayName">Görünen Ad</label>
                <input asp-for="ProductInsert.DisplayName" class="form-control" type="text" placeholder="Ürünün Görünen Adı" />
                <span asp-validation-for="ProductInsert.DisplayName"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInsert.Description">Ürün Açıklaması</label>
                <textarea asp-for="ProductInsert.Description" class="form-control" rows="3" placeholder="Ürün Açıklaması"></textarea>
                <span asp-validation-for="ProductInsert.Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInsert.CategoryId">Kategori Adı</label>
                <select asp-for="ProductInsert.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories.EntityList,"Id","DisplayName"))"></select>
                <span asp-validation-for="ProductInsert.CategoryId"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInsert.Price">Ürün Fiyatı</label>
                <input asp-for="ProductInsert.Price" class="form-control" type="text" placeholder="Ürün Fiyatı" />
                <span asp-validation-for="ProductInsert.Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInsert.Stock">Stok Adedi</label>
                <input asp-for="ProductInsert.Stock" class="form-control" type="text" placeholder="Stok Adedi" />
                <span asp-validation-for="ProductInsert.Stock"></span>
            </div>
            <div class="form-check mt-3">
                <label for="isActive" asp-for="ProductInsert.IsActive">Ürünü aktifleştir</label>
                <input asp-for="ProductInsert.IsActive" class="form-check-input" type="checkbox" id="isActive" />
            </div>
            <input type="hidden" asp-for="ProductInsert.Id"/>
            <input type="submit" value="Güncelle" class="btn btn-info" />
        </form>
    </div>
</div>