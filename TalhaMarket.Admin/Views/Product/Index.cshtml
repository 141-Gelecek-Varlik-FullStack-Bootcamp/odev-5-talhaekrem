@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model ProductViewModel

<h1 class="display-4">Ürünler</h1>
<a class="btn btn-sm btn-success my-3" asp-area="" asp-controller="Product" asp-action="Add"><i class="fa fa-plus"></i> Yeni Ürün Ekle</a>
<div class="card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="AllProductsDT" class="table table-striped table-bordered w-100 table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Kategori</th>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products.EntityList)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@Model.Categories.EntityList.Where(c => c.Id == item.CategoryId).FirstOrDefault().DisplayName</td>
                            <td>@item.DisplayName</td>
                            <td>@item.Price</td>
                            <td>@item.Stock</td>
                            <td><a class="btn btn-sm btn-info" asp-area="" asp-controller="Product" asp-action="Update" asp-route-Id="@item.Id"><i class="fas fa-sync-alt"></i> Güncelle</a></td>
                            <td><a class="btn btn-sm btn-danger" asp-area="" asp-controller="Product" asp-action="DeleteProduct" asp-route-Id="@item.Id"><i class="fas fa-times"></i> Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>