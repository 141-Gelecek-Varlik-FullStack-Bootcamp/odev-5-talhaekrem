@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CategoryViewModel

<h1 class="display-4">Kategoriler</h1>
<a class="btn btn-sm btn-success my-3" asp-area="" asp-controller="Category" asp-action="Add"><i class="fa fa-plus"></i> Yeni Kategori Ekle</a>
<div class="card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="AllCategoriesDT" class="table table-striped table-bordered w-100 table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Kategori Adı</th>
                        <th>Görünen Ad</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories.EntityList)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.DisplayName</td>
                        <td><a class="btn btn-sm btn-info" asp-area="" asp-controller="Category" asp-action="Update" asp-route-Id="@item.Id"><i class="fas fa-sync-alt"></i> Güncelle</a></td>
                        <td><a class="btn btn-sm btn-danger" asp-area="" asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id"><i class="fas fa-times"></i> Sil</a></td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>