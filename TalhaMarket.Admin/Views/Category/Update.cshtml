@{
    ViewData["Title"] = "Update Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CategoryViewModel

<h1 class="display-4">Kategori Güncelle</h1>
<div class="card mb-4">
    <div class="card-body">
        <form asp-controller="Category" asp-action="Update" method="post">
            <div class="form-group">
                <label asp-for="CategoryInsert.Name">Kategori Adı</label>
                <input asp-for="CategoryInsert.Name" class="form-control" type="text" placeholder="Kategori Adı" />
                <span asp-validation-for="CategoryInsert.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryInsert.DisplayName">Görünen Ad</label>
                <input asp-for="CategoryInsert.DisplayName" class="form-control" type="text" placeholder="Kategorinin Görünen Adı" />
                <span asp-validation-for="CategoryInsert.DisplayName"></span>
            </div>
            <div class="form-check mt-3">
                <label for="isActive" asp-for="CategoryInsert.IsActive">Kategoriyi aktifleştir</label>
                <input asp-for="CategoryInsert.IsActive" class="form-check-input" type="checkbox" id="isActive" />
            </div>
            <input type="hidden" asp-for="CategoryInsert.Id" />
            <input type="submit" value="Güncelle" class="btn btn-info" />
        </form>
    </div>
</div>