@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model UserViewModel

<h1 class="display-4">Kullanıcılar</h1>
<h3 class="text-info"><i class="fas fa-info-circle"></i> Yanlızca adminler görüntüleyebilir</h3>
<div class="card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="AllUsersDT" class="table table-striped table-bordered w-100 table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th>Takma Ad</th>
                        <th>E Posta</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users.EntityList)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.SurName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>